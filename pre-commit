#!/bin/sh

CHANGED_FILES=$(git diff --cached --name-only --diff-filter=ACMR | grep '\.kts\?$')

if [ -n "$CHANGED_FILES" ]; then
  echo "üîç Found changed Kotlin files:"
  echo "$CHANGED_FILES"

  FILE_LIST_COMMA_SEP=$(echo "$CHANGED_FILES" | tr '\n' ',')
  echo "üõ†  Running ktlintFormat for includes: $FILE_LIST_COMMA_SEP"
  ./gradlew ktlintFormat -Pincludes="$FILE_LIST_COMMA_SEP"

  echo "‚ûï Adding formatted changes to commit..."
  echo "$CHANGED_FILES" | xargs git add

  echo "üîé Running ktlintCheck..."
  ./gradlew ktlintCheck -Pincludes="$FILE_LIST_COMMA_SEP"

  if [ $? -ne 0 ]; then
    echo "‚ùå Ktlint check failed! Please fix the errors and try again."
    exit 1
  fi
else
  echo "‚ÑπÔ∏è No changed Kotlin files to check."
fi

exit 0